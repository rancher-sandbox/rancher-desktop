{
  "name": "rancher-desktop",
  "license": "Apache-2.0",
  "version": "1.5.0",
  "author": {
    "name": "SUSE",
    "email": "containers@suse.com"
  },
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rancher-sandbox/rancher-desktop.git"
  },
  "scripts": {
    "dev": "node scripts/ts-wrapper.js scripts/dev.ts",
    "lint": "npm run lint:fix",
    "lint:fix": "npm run lint:typescript:fix && npm run lint:go:fix ",
    "lint:nofix": "npm run lint:typescript:nofix && npm run lint:go:nofix",
    "lint:typescript:fix": "eslint --ignore-path=.gitignore --ext mjs,js,ts,vue --fix .",
    "lint:typescript:nofix": "eslint --ignore-path=.gitignore --ext mjs,js,ts,vue .",
    "lint:go:fix": "gofmt -w src/go",
    "lint:go:nofix": "node scripts/ts-wrapper.js scripts/lint-go.ts",
    "generate:nerdctl-stub": "powershell scripts/windows/generate-nerdctl-stub.ps1",
    "build": "node scripts/ts-wrapper.js scripts/build.ts",
    "sign": "node scripts/ts-wrapper.js scripts/sign.ts",
    "test": "npm run lint:nofix && npm run test:unit && npm run test:extra",
    "test:unit": "npm run test:unit:jest && npm run test:unit:nerdctl-stub && npm run test:unit:wsl-helper",
    "test:unit:jest": "jest",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:unit:nerdctl-stub": "cd ./src/go/nerdctl-stub/ && go test ./...",
    "test:unit:wsl-helper": "cd ./src/go/wsl-helper/ && go generate ./... && go test ./...",
    "test:extra": "npm run test:extra:api-schema",
    "test:extra:api-schema": "node scripts/ts-wrapper.js scripts/check-api-schema.ts",
    "test:e2e": "node scripts/ts-wrapper.js scripts/e2e.ts",
    "generateReleases": "node ./scripts/generateReleaseList.js",
    "postinstall": "node scripts/ts-wrapper.js scripts/postinstall.ts",
    "postuninstall": "electron-builder install-app-deps",
    "depversions": "node scripts/ts-wrapper.js scripts/depversions.ts"
  },
  "main": "dist/app/background.js",
  "dependencies": {
    "@kubernetes/client-node": "^0.17.0",
    "@rancher/components": "0.1.0-alpha.4",
    "agent-base": "^6.0.2",
    "bufferutil": "^4.0.3",
    "cookie-universal-nuxt": "^2.2.2",
    "core-js": "^3.25.0",
    "cron-validator": "^1.3.1",
    "cronstrue": "^2.11.0",
    "dayjs": "^1.11.5",
    "dompurify": "^2.3.10",
    "electron-updater": "^5.2.1",
    "express": "^4.18.1",
    "ffi-napi": "^4.0.3",
    "fs-extra": "^10.1.0",
    "http-proxy-agent": "^5.0.0",
    "http-proxy-middleware": "^2.0.6",
    "https-proxy-agent": "^5.0.1",
    "intl-messageformat": "^10.1.1",
    "jquery": "^3.5.1",
    "jsonpath": "^1.0.2",
    "linux-ca": "^2.0.1",
    "lodash": "^4.17.20",
    "marked": "^4.0.15",
    "node-fetch": "^2.6.7",
    "node-forge": "^1.3.1",
    "rancher-icons": "rancher/icons#v2.0.4",
    "ref-napi": "^3.0.3",
    "ref-struct-di": "^1.1.1",
    "semver": "^7.3.5",
    "socks-proxy-agent": "^7.0.0",
    "sudo-prompt": "^9.2.1",
    "tar-stream": "^2.2.0",
    "utf-8-validate": "^5.0.9",
    "v-tooltip": "^2.1.3",
    "vue": "^2.6.12",
    "vue-js-modal": "^2.0.1",
    "vue-router": "^3.6.5",
    "vue-select": "^3.20.0",
    "vue-shortkey": "^3.1.7",
    "vue-slider-component": "^3.2.20",
    "xdg-app-paths": "^5.4.1",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.9",
    "@nuxt/types": "^2.15.2",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/eslint-config": "^10.0.0",
    "@nuxtjs/router-extras": "^1.1.1",
    "@nuxtjs/style-resources": "^1.2.1",
    "@octokit/rest": "^19.0.4",
    "@playwright/test": "^1.25.1",
    "@types/dompurify": "^2.3.3",
    "@types/ffi-napi": "^4.0.5",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.184",
    "@types/marked": "^4.0.3",
    "@types/node": "^16.11.39",
    "@types/node-fetch": "^2.5.10",
    "@types/node-forge": "^1.0.4",
    "@types/ref-napi": "^3.0.4",
    "@types/ref-struct-di": "^1.1.6",
    "@types/semver": "^7.3.10",
    "@types/tar-stream": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.33.0",
    "@vue/test-utils": "^1.1.2",
    "babel-core": "^7.0.0-bridge.0",
    "electron": "^18.0.3",
    "electron-builder": "^23.3.3",
    "electron-devtools-installer": "^3.2.0",
    "electron-notarize": "^1.2.1",
    "eslint": "^8.23.1",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-deprecation": "^1.2.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-nuxt": "^3.2.0",
    "eslint-plugin-vue": "^9.5.1",
    "extract-zip": "^2.0.1",
    "jest": "^27.4.7",
    "js-yaml-loader": "^1.2.2",
    "nan": "^2.16.0",
    "nuxt": "^2.14.12",
    "octokit": "^2.0.7",
    "playwright": "^1.25.0",
    "raw-loader": "^4.0.2",
    "sass": "^1.54.8",
    "sass-loader": "^10.1.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^4.0.0",
    "vue-jest": "^3.0.7",
    "vue-template-compiler": "^2.6.12",
    "webpack": "^4.46.0"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest",
      "^.+\\.vue$": "vue-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "vue"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist",
      "<rootDir>/src/dist",
      "<rootDir>/.git",
      "<rootDir>/e2e"
    ],
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/src/config/emptyStubForJSLinter.js",
      "^@/assets/": "<rootDir>/src/config/emptyStubForJSLinter.js",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "preset": "ts-jest/presets/js-with-babel",
    "testEnvironment": "jsdom"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
