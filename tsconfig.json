{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "pkg/rancher-desktop/*"
      ],
      "@/*": [
        "pkg/rancher-desktop/*"
      ],
      "@shell/*": [
        "./node_modules/@rancher/shell/*"
      ]
    },
    "typeRoots": [
      "./node_modules",
      "./node_modules/@types",
      "./node_modules/@rancher/shell/types"
    ],    
    "types": [
      "@types/node",
      "@types/jest"
    ]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ],
  "include": [
    "**/*",
    ".eslintrc.js"
  ]
}
